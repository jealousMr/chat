.login {
	width: 100%;
	height: 100%;
	background-color: #ffffff;
}
.login_title {
	display: block;
	height: 128rpx;
	padding-left: 32rpx;
	margin-bottom: 20%;
}
.login_title text{
	font-size: 40rpx;
	font-weight: 400;
	line-height: 96rpx;
	margin-left: 20%;
	color: white;
}
.login_title image{
	margin-left: 40%;
	margin-top: 10%;
	width: 130rpx;
	height: 130rpx;
}
.login_user, .login_pwd, .login_btn {
	display: flex;
}
.login_user input, .login_pwd input {
	height: 96rpx;
	border-bottom: 3rpx solid #f6f6f6;
	box-sizing: border-box;
	padding: 0 10rpx;
	font-size: 34rpx;
	color: #000;
	margin-right: 64rpx;
	margin-left: 6rpx;
	display: inline-block;
	flex: 1;
}
.login_user input {
	margin-top: 128rpx
}
.login_pwd input {
	margin-top: 32rpx;
}
.login_btn button{
	flex: 1;
	height: 96rpx;
	margin: 32rpx 120rpx 0;
	border-radius: 50rpx;
	line-height: 96rpx;
	color: rgb(255,255,255);
	background-color: #3aa9de;
	font-size: 34rpx;
}
.login_text {
	height: 34rpx;
	margin-top: 28rpx;
	padding: 0 64rpx;
	display: flex;
	justify-content: space-between;
}

.login_text navigator {
	font-size: 24rpx;
	color: #0873DE;
	display: inline-block;
}

.btn_hover {
	background-color: #137DCD;
}
.nameFocus input, .psdFocus input{
	border: 3rpx solid #0873DE;
	box-sizing: border-box;
}

.person{
	margin-top: 19%;
	margin-left: 46rpx;
	width: 80rpx;
	height: 80rpx;
}
.pws{
	margin-top: 8%;
